<link rel="stylesheet" href="/stylesheets/show_style.css">
<h1 class="mb-1 restaurant-show-title">新增餐廳資訊</h1>
<div class="row mx-auto">
  <form class="col-12 col-md-10 mx-auto" action="/restaurants/create" method="POST">
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-utensils pr-2"></i>
        中文名稱：
      </span>
      <input class="w-100" type="text" name="name" value="" placeholder="Enter the chinese name"
        required>
    </p>
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-utensils pr-2"></i>
        英文名稱：
      </span>
      <input class="w-100" type="text" name="name_en" value="" placeholder="Enter the english name"
        required>
    </p>
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-utensils pr-2"></i>
        類別：
      </span>
      <input list="categories" class="w-100" placeholder="Select the category or enter the category"
        name="category" value="" required>
      <datalist id="categories">
        <option>中東料理</option>
        <option>咖啡</option>
        <option>日本料理</option>
        <option>美式</option>
        <option>義式餐廳</option>
        <option>酒吧</option>
      </datalist>
    </p>
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-map-marker-alt pr-2"></i>
        地址：
      </span>
      <input class="w-100" type="text" name="location" value="" placeholder="Enter the address"
        required>
    </p>
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        地圖：
      </span>
      <input class="w-100" type="text" name="google_map" value=""
        placeholder="Enter the url from google map" required>
    </p>
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-mobile-alt pr-2"></i>
        電話：
      </span>
      <input class="w-100" type="text" name="phone" value=""
        placeholder="Enter the phone number or tel number" required>
    </p>
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-star"></i>
        評分：
      </span>
      <input class=" w-100" type="number" name="rating" value="" min="1.0" max="5.0" step="0.1"
        placeholder="Enter the rating between 1.0 and 5.0" required>
    </p>
    <p class="mb-2">
      <span class="text-secondary">
        <i class="fas fa-signature"></i>
        描述：
      </span>
      <textarea class="w-100" style="height:200px;" name="description"
        placeholder="Describe this restaurant" required></textarea>
    </p>
    <p class="mb-5">
      <span class="text-secondary">
        <i class="fas fa-image"></i>
        圖片：
      </span>
      <input class="w-100" type="text" name="image" value="" placeholder="Enter the url with image"
        required>
    </p>
    <div class="mx-auto mb-5 d-flex justify-content-around" id="btn-block">
      <a class="btn btn-secondary" href="/">
        < Back</a>
          <button type=" submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>